{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacks": {
            "phases": {
                "install": {
                    "cmds": [
                        "pip install -r requirements/production.txt"
                    ]
                }
            }
        }
    },
    "deploy": {
        "startCommand": "python manage.py migrate && python manage.py collectstatic --noinput && gunicorn service.wsgi"
    }
}
